body {
	min-height: 100vh;
	//background: linear-gradient(135deg, #9400d3, #7000a0);
	background: linear-gradient(135deg, ${@lighten("#7000a0", .25)}, ${@darken("#7000a0", .25)});
	color: #333;
}

hr {
	height: 1px;
	background: #ddd;
}

.header {

	margin: 0 auto;
	width: calc(100% - 32px);
	height: 64px;
	display: flex;
	justify-content: space-between;

	&, * {
		color: white;
		font-family: Consolas, monospace;
	}

	& > * {
		display: flex;
		align-items: center;
		& > * + * {
			margin-left: 12px;
		}
	}

	select {
		background: transparent;
		option {
			color: black;
		}
		&:focus {
			outline: none;
		}
	}

}

.content {
	position: absolute;
	top: 64px;
	right, bottom, left: 0;
}

.toast {

	width: 100%;
	padding: 8px;
	background: #fafafc;
	border-left: 6px solid transparent;
	border-radius: 1px;

	foreach(colors as type, color) {

		&.${type} {
			border-color: ${color};
		}

	}

}
